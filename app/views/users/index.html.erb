<% @title = 'Players' %>

<div class="page-header">
  <h1>
    Players
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Create', new_user_path, :class => "btn btn-primary" %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<table class="table table-striped">
  <tr>
    <th onclick="sortTable(0, mediatable)" style="cursor:pointer">Username</th>
    <th onclick="sortTable(1, mediatable)" style="cursor:pointer">Permissions</th>
    <th onclick="sortTable(2, mediatable)" style="cursor:pointer">Last Login</th>
    <th onclick="sortTable(3, mediatable)" style="cursor:pointer">Created On</th>
    <th onclick="sortTable(4, mediatable)" style="cursor:pointer">Stages</th>
    <th class="col-sm-1">Actions</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <td name="Username">
        <% if u.is_active? %>
          <%= link_to u.username, u %>
        <% else %>
          <%= u.username %>
          <br>
          <span class="text-danger small">Inactive</span>
        <% end %>
        <% if u.email_confirmed.nil? %>
          <br>
          <span class="text-danger small">Email Not Confirmed</span>
        <% end %>
      </td>
      <td name="Permissions">
      </td>
      <td name="Last Login">
        <%= u.last_login.localtime.strftime("%d/%m/%y @ %I:%M %p") %>
      </td>
      <td name="Created on">
        <%= u.created_at.localtime.strftime("%d/%m/%y @ %I:%M %p") %>
      </td>
      <td name="Stages">
      </td>
      <td name="Actions">
        <%= link_to 'Edit', edit_user_path(u), :class => "btn btn-default" %>
      </td>
    </tr>
  <% end %>
</table>
